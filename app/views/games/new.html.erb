<div class="container">
  <h1>New Game !!!</h1>
  <hr>
  <table class="table">
    <tr class="tr">
      <%@letters.each do |letter|%>
         <td class="td"><%="#{letter}" %></td>
      <%end%>
     </tr>
   </table>
   <div class="form">
     <form action="/score" method="POST">
        <label for="">What is the longest word you can find ?</label>
        <div class="inputs">
          <input id="input" type="text" name="ask">
          <input id="button" type="submit" value="submit">
        </div>
     </form>
   </div>
</div>
